<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Ride Type Indicator -->
        <TextView
            android:id="@+id/ride_type_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFFERING RIDE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/transportArrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival: 10:00 AM" />

        <!-- Trip Title -->
        <TextView
            android:id="@+id/transport_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Origin and Destination -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš— "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/transport_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Origin"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â†’ "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/transport_destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Destination"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Departure Time -->
        <TextView
            android:id="@+id/transport_departure_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departure: Nov 17, 2025 - 5:00 PM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Available Seats -->
        <TextView
            android:id="@+id/transport_seats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Seats: 3"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="4dp" />

        <!-- ADDED: Days Field (THIS WAS MISSING) -->
        <TextView
            android:id="@+id/transport_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Days: Mon, Tue, Wed"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
