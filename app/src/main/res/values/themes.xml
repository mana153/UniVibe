<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Application Theme -->
    <style name="Base.Theme.UniVibe" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/pure_black</item>
        <item name="colorPrimaryVariant">@color/grey_800</item>
        <item name="colorOnPrimary">@color/pure_white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/grey_500</item>
        <item name="colorSecondaryVariant">@color/grey_600</item>
        <item name="colorOnSecondary">@color/pure_white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/grey_50</item>
        <item name="colorSurface">@color/pure_white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/pure_white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/pure_white</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/pure_white</item>
    </style>

    <!-- Main Application Theme -->
    <style name="Theme.UniVibe" parent="Base.Theme.UniVibe">
        <item name="android:windowBackground">@color/grey_50</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ========== TYPOGRAPHY STYLES ========== -->

    <style name="TextAppearance.UniVibe.Display" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.UniVibe.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.UniVibe.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.UniVibe.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.UniVibe.BodySmall" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.UniVibe.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Toolbar Title TextAppearance (added) -->
    <style name="TextAppearance.UniVibe.Toolbar" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- ========== BUTTON STYLES ========== -->

    <style name="Widget.UniVibe.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.UniVibe.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="strokeColor">@color/grey_200</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.UniVibe.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Widget.UniVibe.Button.Grey" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/button_secondary_text</item>
        <item name="backgroundTint">@color/button_secondary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- ========== CARD STYLES ========== -->

    <style name="Widget.UniVibe.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Widget.UniVibe.CardView.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- ========== TEXT INPUT STYLES ========== -->

    <style name="Widget.UniVibe.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_border_focused</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_tertiary</item>
        <item name="android:textColorHint">@color/input_placeholder</item>
    </style>

    <!-- ========== BOTTOM NAVIGATION STYLE (UPDATED - MODERN) ========== -->

    <style name="Widget.UniVibe.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="elevation">0dp</item>
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">8dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>

    <!-- ========== TOOLBAR STYLE ========== -->

    <style name="Widget.UniVibe.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/pure_white</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- ========== CHIP STYLES ========== -->

    <style name="Widget.UniVibe.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeColor">@color/grey_200</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- ========== TAB LAYOUT STYLE ========== -->

    <style name="Widget.UniVibe.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/text_tertiary</item>
        <item name="tabSelectedTextColor">@color/text_primary</item>
        <item name="tabIndicatorColor">@color/pure_black</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:background">@color/pure_white</item>
    </style>

    <!-- ========== SPLASH SCREEN THEME ========== -->

    <style name="Theme.UniVibe.Splash" parent="Theme.UniVibe">
        <item name="android:windowBackground">@color/pure_white</item>
        <item name="android:statusBarColor">@color/pure_white</item>
    </style>

</resources>